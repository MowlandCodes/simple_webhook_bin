{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },

    // Environment Settings
    "module": "commonjs",
    "target": "es2016",

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "moduleDetection": "force",
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
